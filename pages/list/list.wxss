/* pages/list/list.wxss */

@import "./list-item/list-item-template.wxss";

/* 头部搜索框  */
.search {
  padding: 20rpx 30rpx;
  position: relative;
}

.search input {
  background: white;
  border-radius: 10rpx;
  padding: 0 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 14px;
}

.search icon {
  position: absolute;
  right: 50rpx;
  top: 36rpx;
  z-index: 99;
}


.loading {
  position: relative;
  text-align: center;
  font-size: 14px;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 加载更多 loading  */
.loading::after {
  content: "";
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  display: inline-block;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100% 100%;
  animation: rotate 1s steps(12) infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}



.nothing {
  text-align: center;
  font-size: 14px;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  background-color: #fff;
}